{
  "name": "glados",
  "version": "0.1.0",
  "description": "Plugin based Github bot",
  "main": "./src/app.js",
  "scripts": {
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "start": "node ./src/app.js",
    "start:webhook": "node ./src/webhook.js",
    "test": "jest --colors --verbose --runInBand",
    "test:cover": "jest --colors --coverage --verbose --runInBand"
  },
  "author": "Gyandeep Singh <gyandeeps@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bottleneck": "^1.15.1",
    "bunyan": "^1.8.5",
    "bunyan-format": "^0.2.1",
    "cache-manager": "^2.4.0",
    "github": "^9.2.0",
    "github-webhook-handler": "^0.6.0",
    "load-plugins": "^2.1.2",
    "pkg-conf": "^2.0.0",
    "probot": "^0.7.4",
    "resolve": "^1.3.2",
    "semver": "^5.3.0"
  },
  "devDependencies": {
    "eslint": "^4.1.1",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.6.1",
    "jest": "^20.0.4",
    "localtunnel": "^1.8.3",
    "nock": "^9.0.13"
  },
  "keywords": [
    "bot",
    "github",
    "events"
  ],
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/tests/**/*.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/tests/.eslintrc.js",
      "<rootDir>/tests/__mocks__"
    ],
    "coverageDirectory": "./coverage",
    "collectCoverage": false
  },
  "engines": {
    "node": ">=7.7"
  }
}
